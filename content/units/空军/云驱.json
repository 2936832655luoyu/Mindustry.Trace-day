{
    "type": "flying",  // 单位类型：飞行单位，对应Mindustry中的空中单位分类
    "name": "云驱",    // 单位名称，将显示在游戏内的单位信息中
    "details": "感谢 云意 提供的代码",  // 附加信息，通常用于 credits 或作者信息
    "description": "T2空中优势单位，紫色尾迹是其标志性特征，长射程制空权争夺主力",  // 游戏内显示的单位描述
    // 是否始终解锁（true = 无需研究即可使用）
    "alwaysUnlocked": true,
    
    // 移动与物理属性
    "rotateSpeed": 8,  // 旋转速度，数值越高转向越灵活
    "speed": 7,      // 基础移动速度（像素/帧）
    "drag": 0.7,       // 空气阻力，影响速度衰减
    "accel": 0.6,      // 加速度，数值越高加速越快
    
    // 尾迹特效（飞行时留下的轨迹）
    "trailLength": 26,   // 尾迹长度
    "trailWidth": 14,    // 尾迹宽度
    "trailColor": "purple",  // 尾迹颜色，紫色符合描述中的标志性特征
    
    // 目标锁定配置
    "targetAir": true,    // 可以攻击空中目标
    "targetGround": true, // 可以攻击地面目标（具备空对地能力）
    "circleTarget": true, // 攻击时会环绕目标飞行
    
    // 引擎特效配置（视觉效果）
    "engines": [  
        {
            "x": -3,          // 引擎X轴位置（相对单位中心）
            "y": -5,          // 引擎Y轴位置（相对单位中心）
            "radius": 6,      // 引擎特效半径
            "rotation": 90,   // 引擎朝向角度
            "color": [0.9, 0.4, 1.0, 0.7]  // 引擎颜色（RGBA），淡紫色半透明
        },
        {
            "x": 3,           // 右侧引擎X轴位置（与左侧对称）
            "y": -5,          // 右侧引擎Y轴位置
            "radius": 6,      // 引擎特效半径
            "rotation": 90,   // 引擎朝向角度
            "color": [0.9, 0.4, 1.0, 0.7]  // 与左侧引擎同色
        }
    ],
    
    "research": "云陨",  // 解锁该单位所需的研究项目
    
    // 弹药类型配置（能量型弹药）
    "ammoType": {  
        "type": "PowerAmmoType",  // 能量型弹药，消耗电力而非实体弹药
        "totalPower": 1500        // 总能量容量
    },
    
    // 碰撞与生存属性
    "hitSize": 13,       // 碰撞体积大小，影响被击中判定
    "flying": true,     // 确认是飞行单位（冗余字段，与type对应）
    "health": 2500,     // 生命值
    "armor": 1,         // 护甲值，降低受到的伤害
    
    // 引擎视觉偏移配置
    "engineOffset": 2,  // 引擎位置偏移量
    "engineSize": 4,    // 引擎大小
    
    "itemCapacity": 0,  // 物品携带容量，0表示不能携带物品
    
    // 武器配置数组
    "weapons": [  
        {
            "name": "殷协-2",  // 武器名称
            "x": 0,            // 武器X轴位置（相对单位中心）
            "y": 0,            // 武器Y轴位置（相对单位中心）
            "recoil": 1,       // 后坐力大小
            "shootX": -1.5,    // 射击特效X偏移
            "shootY": 0.8,     // 射击特效Y偏移
            "reload": 30,      // 装填时间（帧），数值越低射速越快
            "top": false,      // 是否在单位顶部
            "rotate": 2,       // 武器旋转速度
            "shootEffect": "shootBig",  // 射击特效类型
            "shootEffectColor": "FF0000"  // 射击特效颜色（淡紫色）
            "ejectEffect": "casing1",   // 弹壳/弹芯抛出特效
            
            // 射击模式配置
            "shoot": {  
                "shots": 4,             // 一轮射击的子弹数量
                "shotDelay": 6,       // 子弹发射间隔
                "type": "ShootBarrel",  // 多枪管射击类型
                "barrels": [            // 枪管位置数组（x,y,rotation）
                    -2, 0.8, 0,
                    0, 0.8, 0,
                    2, 0.8, 0
                ]
            },
            "alternate": false,  // 是否交替射击（多枪管时）
            "mirror": true,      // 是否镜像显示（左右对称）
            
            // 子弹属性
            "bullet": {  
                "damage": 100,        // 基础伤害
                "lifetime": 15,       // 子弹生命周期（帧）
                "width": 4,           // 子弹宽度
                "height": 4,          // 子弹高度
                "speed": 12,          // 子弹速度
                "sprite": "circle-bullet",  // 子弹使用的精灵
                "color": [0.9, 0.5, 1.0, 1.0],  // 子弹颜色（紫色）
                "pierce": 1           // 穿透次数，1表示可穿透1个目标
            }
        }
    ]
}