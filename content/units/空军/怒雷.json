{
  // 单位基础类型定义
  "type": "flying",          // 单位类型：飞行单位（决定基础移动逻辑，可跨越地面障碍）
  "name": "怒雷",             // 单位名称：用于游戏内UI显示、图鉴标识等
  "description": "呜呜呜呜 ", // 单位描述：当前为占位文本，通常用于说明背景或核心特性
  "ammoCapacity": 0,          // 弹药容量：0表示无需弹药，武器/技能无弹药消耗机制
  "ammoResupplyAmount": 0,    // 弹药补给量：因弹药容量为0，此参数暂无效
  "speed": 3,                 // 移动速度：数值越高，单位在地图中移动越迅速（单位：游戏内距离/帧）
  "flying": true,             // 飞行状态：true为飞行单位，可无视地面地形限制
  "turnCursor": true,         // 光标同步转向：单位转向时，游戏光标同步跟随朝向，优化操作手感
  "engineOffset": 2,          // 引擎特效偏移量：调整单位模型中引擎特效的位置偏移（单位：游戏内距离单位）
  "engineSize": 4,            // 引擎特效尺寸：数值越大，引擎视觉效果（火焰、光晕）越明显
  "hitSize": 27,              // 碰撞体积：决定单位被攻击的判定范围，数值越大越易被命中
  "targetAir": true,          // 对空锁定：true表示可锁定并攻击空中单位，false则仅攻击地面单位
  "health": 15000,            // 生命值：单位存活基础，归0时单位被摧毁，数值越高抗伤能力越强
  "armor": 0,                 // 护甲值：用于减免伤害，0表示受伤害无额外减免（具体计算依游戏逻辑）
  "mineSpeed": 10,            // 布雷速度：单位部署地雷的效率，数值越高布雷越快（若具备布雷能力）
  "mineTier": 2,              // 地雷等级：决定部署地雷的品质（伤害、范围等），等级越高性能越强
  "buildSpeed": 3,            // 建造速度：单位建造建筑/从属单位的效率，数值越高建造越短（若具备建造能力）
  "rotateSpeed": 3,           // 单位转向速度：数值越高，单位调整朝向（如瞄准目标）反应越快
  "itemCapacity": 100,        // 物品容量：存储游戏内道具（资源、消耗品）的上限，0则无法携带物品
  "commandLimit": 0,          // 指挥单位上限：0表示无指挥权限，无法额外指挥从属单位
  "rotateShooting": true,     // 转向射击：true表示射击时可随目标调整朝向，实现瞄准射击；false仅固定方向射击
  
  // 单位特殊能力配置（共3种能力）
  "abilities": [
    {
      "type": "EnergyFieldAbility", // 能力类型：能量领域（范围伤害）
      "damage": 50,                 // 领域伤害：每次对领域内目标造成50点伤害
      "range": 80,                  // 领域范围：以单位为中心，半径80的圆形攻击范围（单位：游戏内距离）
      "maxTargets": 10,             // 最大攻击目标数：单次领域最多对10个敌方单位造成伤害
      "interval": 30                // 伤害间隔：30游戏帧触发1次领域伤害（间隔越短频率越高）
    },
    {
      "type": "RepairFieldAbility", // 能力类型：修复领域（范围治疗/修复）
      "radius": 10,                 // 修复范围：以单位为中心，半径10的圆形修复范围（仅对友方生效）
      "repairAmount": 1,            // 单次修复量：每次修复1点生命值/耐久度
      "cooldown": 60                // 能力冷却：60游戏帧冷却时间，冷却结束后可再次触发
    }
  ],
  
  // 单位武器配置（共2种武器）
  "weapons": [
    {
      "name": "伤",                // 武器名称：用于区分不同武器
      "x": 4,                     // 武器挂载X轴位置：相对于单位中心点的水平偏移
      "y": -3,                    // 武器挂载Y轴位置：相对于单位中心点的垂直偏移（负数表示上方）
      "mirror": true,             // 镜像挂载：true表示在单位对称位置额外挂载1个（如左右各1个，提升火力）
      "reload": 120,              // 武器装填时间：120游戏帧装填1次（数值越高发射间隔越长）
      "rotate": true,             // 武器转向：true表示武器可随目标旋转瞄准
      "rotateSpeed": 5,           // 武器转向速度：数值越高，武器瞄准目标反应越快
      "shootEffect": "ExplosionEffect", // 射击特效：使用“爆炸特效”，增强视觉反馈
      "shootSound": "largeCannon",      // 射击音效：使用“大型加农炮音效”，匹配重型武器定位
      
      // 武器“伤”的子弹属性（保持原调整后状态，仅优化“雨”的参数）
      "bullet": {
        "type": "MissileBulletType", // 子弹类型：导弹（具备目标追踪能力）
        "damage": 10,                // 单颗子弹基础伤害
        "frontColor": "FFDE00",      // 子弹前端颜色：十六进制色值（金黄色）
        "backColor": "FF4E00",       // 子弹后端颜色：十六进制色值（橙红色）
        "width": 3,                  // 子弹视觉宽度：纤细形态，匹配导弹定位
        "height": 8,                 // 子弹视觉高度：拉长设计，增强流线感
        "speed": 10,                 // 子弹飞行速度：核心参数不变
        "lifetime": 100,             // 子弹存活时间：匹配100追踪范围，确保完整追踪
        "reloadTime": 30,            // 子弹自身装填时间：部分逻辑中与武器reload叠加生效
        "buildingDamageMultiplier": 1, // 对建筑伤害倍率：1表示对建筑与对单位伤害一致
        "homingPower": 20,           // 追踪强度：数值越高，子弹追踪目标的转向力度越强
        "homingRange": 100,          // 追踪范围：100（与存活时间匹配）
        "pierce": 10,                // 穿透次数：可穿透10个目标（穿透后伤害不衰减）
        "bounce": 0,                 // 反弹次数：0表示命中后不反弹，直接消失/触发效果
        "explosionRadius": 0,        // 爆炸范围：0表示无爆炸效果，仅命中点造成伤害
        "gravity": 0,                // 重力影响：0表示不受重力下坠，沿路径直线飞行
        "rotateSpeed": 0,            // 子弹自身旋转速度：0表示飞行时不旋转
        "spread": 0,                 // 散射角度：0表示无偏移，精准发射
        "count": 2,                  // 单次发射数量：每次射击发射2颗子弹（提升群体伤害）
        "knockback": 0,              // 击退力度：0表示命中后无击退效果
        "lightRadius": 0,            // 发光范围：0表示飞行时不产生光照
        "fragmentCount": 0,          // 碎片数量：0表示命中后不分裂碎片
        "fragmentSize": 0.5,         // 碎片尺寸：因fragmentCount为0，暂无效
        "status": "入侵"             // 附加异常状态：“入侵”通常为持续伤害/功能限制（依游戏定义）
      }
    },
    {
      "name": "雨",                // 武器名称：定位高频高伤辅助攻击
      "x": 3,                     // 武器挂载X轴位置：比“伤”更靠近单位中心
      "y": -2,                    // 武器挂载Y轴位置：比“伤”更靠近单位中心（视觉更紧凑）
      "mirror": true,             // 镜像挂载：左右对称挂载，提升火力密度
      "reload": 24,               // 武器装填时间：24游戏帧装填1次（频率远高于“伤”）
      "rotate": true,             // 武器转向：可随目标旋转瞄准
      "rotateSpeed": 5,           // 武器转向速度：与“伤”一致，保证瞄准效率
      "shootEffect": "RadialEffect", // 射击特效：使用“放射状特效”，匹配高频射击视觉
      "shootSound": "cannon",        // 射击音效：使用“普通加农炮音效”，匹配中高频定位
      
      // 武器“雨”的子弹属性（已修改：天蓝渐变色+纤细拉长尺寸+保留射程匹配）
      "bullet": {
        "type": "BasicBulletType", // 子弹类型：基础弹道（无导弹强追踪，沿直线飞行）
        "damage": 500,             // 单颗子弹基础伤害：高伤定位不变
        "frontColor": "#87CEEB",    // 子弹前端颜色：天蓝渐变色（浅天蓝，模拟晴空色调，视觉更轻盈）
        "backColor": "#4169E1",     // 子弹后端颜色：天蓝渐变色（深天蓝，与前端形成自然过渡，增强立体感）
        "width": 2,                 // 子弹视觉宽度：从6调整为2（更纤细，符合“雨”的高频密集射击感）
        "height": 10,               // 子弹视觉高度：从6调整为10（大幅拉长，强化“细长弹道”视觉，匹配反弹特性）
        "speed": 8,                 // 子弹飞行速度：核心参数不变，确保射程计算稳定
        "lifetime": 90,             // 子弹存活时间：保持90帧（射程=8×90=720，匹配72追踪范围+10次反弹需求）
        "reloadTime": 30,           // 子弹自身装填时间
        "buildingDamageMultiplier": 2, // 对建筑伤害倍率：2表示对建筑伤害是对单位的2倍（针对建筑设计）
        "homingPower": 10,          // 追踪强度：轻微修正弹道，与基础弹道类型匹配
        "homingRange": 72,          // 追踪范围：72（与存活时间匹配，避免空靶）
        "pierce": 1,                // 穿透次数：仅穿透1个目标（高伤集中不变）
        "bounce": 10,               // 反弹次数：10次（细长尺寸更易体现反弹轨迹，提升视觉辨识度）
        "explosionRadius": 1,       // 爆炸范围：小范围爆炸，匹配高伤定位
        "gravity": 0,               // 重力影响：不受重力下坠，沿直线飞行
        "rotateSpeed": 0,           // 子弹自身旋转速度：不旋转，保持弹道稳定
        "spread": 0,                // 散射角度：无偏移，精准发射
        "count": 1,                 // 单次发射数量：每次1颗子弹（集中高伤害）
        "knockback": 100,           // 击退力度：强力击退，打乱敌方阵型
        "lightRadius": 1,           // 发光范围：微弱光照，提升天蓝子弹的视觉存在感
        "fragmentCount": 2,         // 碎片数量：命中后分裂2个碎片（二次伤害概率不变）
        "fragmentSize": 0.5,        // 碎片尺寸：小型碎片，增加敌方规避难度
        "status": "melting"         // 附加异常状态：“融化”通常为持续损失护甲/防御（依游戏定义）
      }
    }
  ]
}