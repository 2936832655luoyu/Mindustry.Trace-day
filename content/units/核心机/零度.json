{
    "type": "flying",
    "name": "零度",
    "description": "模拟死星核心机的短射程飞行单位，发射对空高爆弹，分裂小型破片造成近距离范围伤害",
    "category": "unit",

    "speed": 3,
    "flying": true,
    // 删除 turnCursor: false（未知字段）
    "engineOffset": 0,
    "engineSize": 3,
    "hitSize": 20,
    "health": 1000,
    "armor": 0,
    "rotateSpeed": 5,

    "ammoCapacity": 100,
    "mineSpeed": 2,
    "mineTier": 3,
    "buildSpeed": 1.25,
    "coreUnitDock": true,
    "itemCapacity": 100,
    "commandLimit": 20,

    "targetAir": true,
    "targetGround": false,
    // 删除 rotateShooting: false（未知字段）

    "abilities": [
        {
            "type": "ForceFieldAbility",
            "radius": 100,
            "regen": 10,
            "max": 600,
            "cooldown": 400
        }
    ],

    "weapons": [
        {
            "name": "高射破片炮",
            "x": 0, "y": 0,
            "mirror": false,
            "rotate": false,
            "reload": 15,
            "shootSound": "flak-shot",
            "shootSoundVolume": 1.0,
            "continuous": false,
            "shoot": {
                "shots": 2,
                "shotDelay": 30
            },
            "inaccuracy": 0.1,
            "shootCone": 10,

            "shootEffect": {  // 已正确设置 type: ParticleEffect
                "type": "ParticleEffect",
                "particles": 8,
                "sizeFrom": 1.2,
                "sizeTo": 0,
                "lifetime": 10,
                "colorFrom": "99EEFFFF",
                "colorTo": "CCFFFFFF",
                "speed": 3.0,
                "gravity": 0.06,
                "randomizeAngle": true,
                "additive": true
            },

            "bullet": {
                "type": "FlakBulletType",
                "range": 80,
                "damage": 320,
                "width": 6,
                "height": 14,
                // 删除 collisionRadius: 7（FlakBulletType 不支持）
                "speed": 10,
                "lifetime": 25,
                // 删除 fragCount: 10（FlakBulletType 不支持）
                // 删除 fragDamage: 40（FlakBulletType 不支持）
                // 删除 airMultiplier: 3.5（FlakBulletType 不支持）
                // 删除 color: "99EEFFFF"（BasicBulletType 不支持）
                "collidesGround": false,
                "collidesAir": true,

                "fragBullet": {
                    "type": "BasicBulletType",
                    "damage": 290,
                    "width": 2.5,
                    "height": 2.5,
                    "speed": 9.5,
                    "lifetime": 18,
                    // 删除 color: "99EEFFFF"（BasicBulletType 不支持）
                    "collidesGround": false,
                    "collidesAir": true,
                    "hitEffect": {
                        "type": "ParticleEffect",
                        "particles": 6,
                        "sizeFrom": 0.8,
                        "sizeTo": 0,
                        "lifetime": 8,
                        "colorFrom": "99EEFFFF",
                        "colorTo": "CCFFFFFF",
                        "speed": 2.0,
                        "gravity": 0.02,
                        "additive": true
                    }
                },

                // 将 trailEffect 改为官方支持的 trail 字段
                "trail": {  // 原字段名 trailEffect → 改为 trail
                    "type": "ParticleEffect",
                    "particles": 18,
                    "sizeFrom": 0.6,
                    "sizeTo": 0,
                    "lifetime": 6,
                    "colorFrom": "99EEFFFF",
                    "colorTo": "CCFFFFFF",
                    "speed": 0.5,
                    "gravity": 0.01,
                    "additive": true
                },

                "hitEffect": {
                    "type": "MultiEffect",
                    "effects": [
                        {
                            "type": "ExplosionEffect",
                            "radius": 10,
                            "particles": 3,
                            "color": "99EEFFFF",
                            "lifetime": 14,
                            "scale": 0.4
                        },
                        {
                            "type": "WaveEffect",
                            "waves": 1,
                            "radius": 10,
                            "color": "99EEFFFF",
                            "speed": 2.2,
                            "stroke": 1.0
                        }
                    ]
                }
            }
        }
    ]
}