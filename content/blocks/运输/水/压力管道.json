{
	"type": "Conduit",  // 类型标识：管道类建筑，属于液体运输基础类型
	"name": "压力管道",  // 建筑名称，表明其核心特性是高压输送液体
	"description": "压力？鸭梨？，什么东西啊？反正这玩意比你原版快就对了，而且是悬浮的！", 
	"researchCostMultiplier": 0.03
	 // 功能描述，突出相比普通管道的速度优势
    "health": 220,  // 建筑生命值：300点耐久度，抗损坏能力较强
	"hasLiquids": true,  // 液体处理能力：支持液体通过/存储
	"liquidCapacity": 20,  // 液体容量：单节管道可暂存15单位液体（高于普通管道）
	"outputsLiquid": true,  // 液体输出能力：允许液体从管道流出至其他设备
	"update": true,  // 动态更新开关：启用实时液体流动状态更新
	"rotate": true,  // 旋转功能：放置时可随连接方向旋转（适应不同布局）
	"solid": false,  // 固体碰撞属性：非固体，不阻碍其他建筑放置或单位通行
	"group": "liquids",  // 功能分组：归类到液体运输组，便于在建造菜单中查找
	"floating": true,  // 悬浮属性：可放置在非地面区域（如空中、水面等）
	"requirements": [  // 建造所需材料列表
		{
			"item": "压缩铅",  // 高压专用玻璃（核心材料）
			"amount": 2  // 需要2单位高压玻璃
		}  // 注意：原配置此处多了一个逗号，实际使用时需删除避免语法错误
	],
	"category": "liquid",  // 分类属性：属于液体运输类建筑
	"research": "遗湿传送带"  // 解锁条件：需要先完成“混合窑炉”研究才能建造
}